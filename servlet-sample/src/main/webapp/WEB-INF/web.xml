<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

	<servlet>
		<servlet-name>hello-servlet</servlet-name>
		<servlet-class>edu.java.web.HelloServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>hello-servlet</servlet-name>
		<url-pattern>/xuanson</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>html-page</servlet-name>
		<servlet-class>edu.java.web.HtmlPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>html-page</servlet-name>
		<url-pattern>/page</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>edu.java.web.SimpleServletListener</listener-class>
	</listener>
	
</web-app>